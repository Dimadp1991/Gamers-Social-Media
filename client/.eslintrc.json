{
    "env": {
        "browser": true,
        "es2021": true,
		"node": true
    },
    "extends": [
        "plugin:react/recommended",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": "off",
		"react/prop-types": 0,
        "no-tabs": 0,
		"require-jsdoc": "off",
		"max-len": "off",
        "quotes": [
            "error",
            "single",
			{"allowTemplateLiterals": true}
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}